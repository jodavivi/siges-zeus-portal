 <mvc:View  
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.telcomdataperu.app.Acceso.controller.Aplicacion.MantAplicacion"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:ui="sap.ui.table"> 
	 <Page  
		title	=	"Detail 1" 
		class	=	"sapUiStdPage">
	
		<customHeader>
			<Toolbar>
				
				<ToolbarSpacer/>
				<Title 
					text	=	"Aplicaciones" 
					level	=	"H2"/>
				<ToolbarSpacer/>
			</Toolbar>
		</customHeader>
	
		<content> 
			 
			<ui:Table
				id="tblAplicaciones"
				rows="{ path : 'modelAcceso>/aListaAplicaciones' , sorter: { path: 'Id', descending: true }}"
				selectionMode="MultiToggle"  
				class="tbTabla"
				alternateRowColors="true" 
				rowActionCount="2"
				visibleRowCountMode="Auto"
				minAutoRowCount="15"  
				enableBusyIndicator="true"  
				selectionBehavior="RowSelector"
				fixedColumnCount="2"
				showOverlay="false" 
				ariaLabelledBy="title">
				<ui:extension>
					<OverflowToolbar>
						<Title id="title" text="Aplicaciones"/>
						<ToolbarSpacer/>
						<Button 
							icon		=	"sap-icon://delete" 
							type		=	"Reject"
							tooltip		=	"Eliminar Aplicacion" 
							press		=	"onEliminarAplicacion"  />
						<Button 
							icon		=	"sap-icon://add-document" 
							tooltip		=	"Registrar AplicaciÃ³n" 
							press		=	"onRegistrarAplicacion"  />
					</OverflowToolbar>
				</ui:extension>
				<ui:columns> 
					 <ui:Column width="2.5rem" hAlign="Center"> 
						<ui:template>
							<core:Icon press="onVerAuditoria"  size="1.2rem"  src="sap-icon://show"/>
						</ui:template>
					</ui:Column>
					<ui:Column width="2.5rem" hAlign="Center"> 
						<ui:template>
							<core:Icon press="onEditarAplicacion"  size="1.2rem"  src="sap-icon://edit"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Id" sortProperty="Id" width="6rem">
						<Label text="Id" />
						<ui:template>
								<Link text="{modelAcceso>Id}" press="onDetalleAplicacion" /> 
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Codigo" sortProperty="Codigo" width="6rem">
						<Label text="Codigo" />
						<ui:template>
								<Text text="{modelAcceso>Codigo}" wrapping="false" />
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Tipo" sortProperty="Tipo" width="6rem">
						<Label text="Tipo" />
						<ui:template>
								<Text text="{	path		:	'modelAcceso>Tipo', formatter	:	'.formatter.tipoControl'}" wrapping="false" />
						</ui:template>
					</ui:Column>
					<ui:Column width="9rem" filterProperty="Nombre" sortProperty="Nombre">
						<Label text="Nombre" />
						<ui:template>
							<Text text="{modelAcceso>Nombre}" wrapping="false" />
						</ui:template>
					</ui:Column>
					<ui:Column width="15rem" filterProperty="Descripcion" sortProperty="Descripcion">
						<Label text="Descripcion" />
						<ui:template>
							<Text text="{modelAcceso>Descripcion}" wrapping="false" />
						</ui:template>
					</ui:Column>
					<ui:Column width="5rem" filterProperty="Ico" sortProperty="Ico" hAlign="Center">
						<Label text="Ico" />
						<ui:template> 
							<core:Icon
								src="{modelAcceso>Ico}"
								class="size1"
								color="#031E48" >
								<core:layoutData>
									<FlexItemData growFactor="1" />
								</core:layoutData>
							</core:Icon>
						</ui:template>
					</ui:Column>
					<ui:Column width="15rem" filterProperty="Url" sortProperty="Url">
						<Label text="Route" />
						<ui:template>
							<Text text="{modelAcceso>Url}" wrapping="false" />
						</ui:template>
					</ui:Column>
					<ui:Column width="15rem" filterProperty="CodigoPadre" sortProperty="CodigoPadre">
						<Label text="Padre" />
						<ui:template>
							<Text text="{modelAcceso>CodigoPadre}" wrapping="false" />
						</ui:template>
					</ui:Column>
 
					<ui:Column width="8rem">
						<Label text="Estado" />
						<ui:template>
							<ObjectStatus 
								text    =   "{modelAcceso>EstadoAplicacion}"
								state   =   "{	path		:	'modelAcceso>CodEstadoAplicacion', formatter	:	'.formatter.stateEstado'}"   
								icon    =   "{	path		:	'modelAcceso>CodEstadoAplicacion', formatter	:	'.formatter.iconEstado'}"/> 
						</ui:template>
					</ui:Column>  
				</ui:columns> 
			</ui:Table> 
		</content> 
	</Page>
</mvc:View>
<mvc:View
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.telcomdataperu.app.Acceso.controller.Permisos.MantPermisos"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:ui="sap.ui.table">
			 <Page  
		title	=	"Detail 1" 
		class	=	"sapUiStdPage">
	
		<customHeader>
			<Toolbar> 
				<ToolbarSpacer/>
				<Title 
					text	=	"Permisos" 
					level	=	"H2"/>
				<ToolbarSpacer/>
			</Toolbar>
		</customHeader>
	
		<content> 
			 
			  <HBox class="mantGrupo">
			 <ui:Table
			  width="45.2rem" 
				id="tblRoles"
				rows="{ path : 'modelAcceso>/aListaRoles' , sorter: { path: 'Id', descending: true }}" 
				selectionMode="MultiToggle"  
				class="tbTabla"
				alternateRowColors="true" 
				rowActionCount="2"    
				enableBusyIndicator="true"  
				selectionBehavior="RowSelector"
				fixedColumnCount="2"
				showOverlay="false" 
				ariaLabelledBy="title">
				<ui:extension>
					<OverflowToolbar>
						<Title id="title" text="Roles"/>
						<ToolbarSpacer/>
						<Button 
							icon		=	"sap-icon://delete" 
							type		=	"Reject"
							tooltip		=	"Eliminar Parametro" 
							press		=	"onPressEliminarRol"  />
						<Button 
							icon		=	"sap-icon://add-document" 
							tooltip		=	"Registrar Parametro" 
							press		=	"onPressCrearRol"  />
					</OverflowToolbar>
				</ui:extension>
				<ui:columns> 
					 <ui:Column width="2.5rem" hAlign="Center"> 
						<ui:template>
							<core:Icon press="onVerAuditoriaRol"  size="1.2rem"  src="sap-icon://show"/>
						</ui:template>
					</ui:Column>
					<ui:Column width="2.5rem" hAlign="Center"> 
						<ui:template>
							<core:Icon press="onPressEditarRol"  size="1.2rem"  src="sap-icon://edit"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Id" sortProperty="Id" width="4rem">
						<Label text="Id" />
						<ui:template>
								<Link text="{modelAcceso>Id}" press="onPressVerRol" /> 
						</ui:template>
					</ui:Column>
					<ui:Column width="9rem" filterProperty="Nombre" sortProperty="Nombre">
						<Label text="Nombre" />
						<ui:template>
							<Text text="{modelAcceso>Nombre}" wrapping="false" />
						</ui:template>
					</ui:Column> 
					<ui:Column width="14rem" filterProperty="Descripcion" sortProperty="Descripcion">
						<Label text="Descripcion" />
						<ui:template>
							<Text text="{modelAcceso>Descripcion}" wrapping="false" />
						</ui:template>
					</ui:Column>  
					<ui:Column width="8rem" filterProperty="EstadoRol" sortProperty="EstadoRol">
						<Label text="Estado" />
						<ui:template>
							<ObjectStatus 
								text    =   "{modelAcceso>EstadoRol}"
								state   =   "{	path		:	'modelAcceso>EstadoRolCod', formatter	:	'.formatter.stateEstado'}"   
								icon    =   "{	path		:	'modelAcceso>EstadoRolCod', formatter	:	'.formatter.iconEstado'}"/> 
						</ui:template>
					</ui:Column>  
					<ui:Column 
						width           =   "3rem" 
						hAlign          =   "Center" 
						label           =   "" 
						sortProperty    =   "" 
						filterProperty  =   ""
						autoResizable   =   "true">
						<ui:template>  
							<HBox> 
								<Button 
									type    =   "Transparent" 
									press   =   "onPressGoRolAplicacion"  
									tooltip =   "Buscar Aplicaciones"
									icon    =   "sap-icon://navigation-right-arrow"/>
							</HBox>
						</ui:template>
					</ui:Column>   

				</ui:columns> 
			</ui:Table> 
			<ui:TreeTable
                    id="tblRolAplicaciones"
                    rows="{path:'modelAcceso>/aListaRolAplicacion', parameters: {arrayNames:['listaAccesos']}}"
                    selectionMode="MultiToggle"
                    enableSelectAll="false"
                    ariaLabelledBy="title">
                <ui:extension>
                    <OverflowToolbar>
						<Title  text="Aplicaciones {modelAcceso>/oRolSeleccionado/NombreRol}"/>
						<ToolbarSpacer/>
						<Button 
							icon		=	"sap-icon://delete" 
							type		=	"Reject"
							tooltip		=	"Eliminar Aplicaciones" 
							press		=	"onPressEliminarAplicacionxRol"  />
						<Button 
							icon		=	"sap-icon://add-document" 
							tooltip		=	"Registrar Aplicación" 
							press		=	"onConsultarAplicacionSinAsignar"  />
					</OverflowToolbar>
                </ui:extension>
                <ui:columns> 
				<ui:Column filterProperty="Id" sortProperty="Id" width="6rem">
						<Label text="Id" />
						<ui:template>
								<Link text="{modelAcceso>Id}" press="onParametroDetalle" /> 
						</ui:template>
					</ui:Column>
					<ui:Column width="9rem" filterProperty="Tipo" sortProperty="Tipo">
						<Label text="Tipo" />
						<ui:template>
							<Text text="{	path		:	'modelAcceso>Tipo', formatter	:	'.formatter.tipoControl'}" wrapping="false" />
						</ui:template>
					</ui:Column> 
					<ui:Column width="9rem" filterProperty="Nombre" sortProperty="Nombre">
						<Label text="Nombre" />
						<ui:template>
							<Text text="{modelAcceso>Nombre}" wrapping="false" />
						</ui:template>
					</ui:Column> 
					<ui:Column width="9rem" filterProperty="Descripcion" sortProperty="Descripcion">
						<Label text="Descripción" />
						<ui:template>
							<Text text="{modelAcceso>Descripcion}" wrapping="false" />
						</ui:template>
					</ui:Column> 
                </ui:columns>
            </ui:TreeTable>
			</HBox>
		</content> 
	</Page>
 
</mvc:View>
